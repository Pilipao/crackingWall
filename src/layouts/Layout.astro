---
import { HeaderContainer } from '../components/HeaderContainer';
import '../index.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Download and explore high-quality tech wallpapers, cyberpunk art, glitch visuals, and hacker aesthetics.", 
  image = "/og-image.webp" 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <title>{title}</title>
  </head>
  <body>
    <!-- Header with client-side interactivity -->
    <HeaderContainer client:load />

    <main>
      <slot />
    </main>
    
    <footer style="text-align: center; padding: 2rem; color: rgba(160, 160, 160, 0.8); font-size: 0.875rem;">
      <p>&copy; {new Date().getFullYear()} CrackingWall. All rights reserved.</p>
    </footer>
  </body>
</html>

<style is:global>
  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background: #0a0a0f;
    color: #f0f0f0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
  }

  main {
    min-height: calc(100vh - 200px);
  }
</style>
